
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.CompletedTasksController"
      prefHeight="500.0" prefWidth="700.0"
      styleClass="app-background">

    <stylesheets>
        <URL value="@../styles/application.css"/>
    </stylesheets>
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Completed Tasks" styleClass="section-header"/>
    
    <ListView fx:id="completedTasksListView" VBox.vgrow="ALWAYS" styleClass="task-list"/>
    
    <HBox spacing="10" alignment="CENTER_RIGHT" padding="10">
        <Button text="Close" onAction="#handleClose" styleClass="secondary-button"/>
    </HBox>
</VBox>
